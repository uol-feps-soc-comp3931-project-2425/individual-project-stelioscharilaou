<?xml version="1.0"?>
<applications>
	<!-- Real‐time sensor perception -->
	<application name="AUTONOMOUS_PERCEPTION">
		<usage_percentage>70</usage_percentage>
		<prob_cloud_selection>10</prob_cloud_selection>
		<poisson_interarrival>1</poisson_interarrival>  <!-- every 1 s on avg -->
		<delay_sensitivity>0.90</delay_sensitivity>
		<active_period>50</active_period>
		<idle_period>10</idle_period>
		<data_upload>1024</data_upload>
		<data_download>256</data_download>
		<task_length>5000</task_length>
		<required_core>2</required_core>
		<vm_utilization_on_edge>40</vm_utilization_on_edge>
		<vm_utilization_on_cloud>10</vm_utilization_on_cloud>
		<vm_utilization_on_mobile>0</vm_utilization_on_mobile>
	</application>

	<!-- Periodic route & collision avoidance planning -->
	<application name="ROUTE_PLANNING">
		<usage_percentage>30</usage_percentage>
		<prob_cloud_selection>20</prob_cloud_selection>
		<poisson_interarrival>5</poisson_interarrival>  <!-- every 5 s on avg -->
		<delay_sensitivity>0.85</delay_sensitivity>
		<active_period>40</active_period>
		<idle_period>20</idle_period>
		<data_upload>512</data_upload>
		<data_download>128</data_download>
		<task_length>8000</task_length>
		<required_core>2</required_core>
		<vm_utilization_on_edge>50</vm_utilization_on_edge>
		<vm_utilization_on_cloud>15</vm_utilization_on_cloud>
		<vm_utilization_on_mobile>0</vm_utilization_on_mobile>
	</application>
</applications>
