<?xml version="1.0"?>
<applications>
	<!-- High‐frequency sensor monitoring -->
	<application name="MANUFACTURING_MONITOR">
		<usage_percentage>80</usage_percentage>
		<prob_cloud_selection>20</prob_cloud_selection>
		<poisson_interarrival>5</poisson_interarrival> <!-- every 5 s on average -->
		<delay_sensitivity>0.90</delay_sensitivity>
		<active_period>45</active_period>
		<idle_period>15</idle_period>
		<data_upload>256</data_upload>
		<data_download>64</data_download>
		<task_length>3000</task_length>
		<required_core>1</required_core>
		<vm_utilization_on_edge>20</vm_utilization_on_edge>
		<vm_utilization_on_cloud>0.6</vm_utilization_on_cloud>
		<vm_utilization_on_mobile>0</vm_utilization_on_mobile>
	</application>

	<!-- Lower‐frequency predictive algorithms -->
	<application name="PREDICTIVE_MAINTENANCE">
		<usage_percentage>20</usage_percentage>
		<prob_cloud_selection>30</prob_cloud_selection>
		<poisson_interarrival>20</poisson_interarrival> <!-- every 20 s on average -->
		<delay_sensitivity>0.75</delay_sensitivity>
		<active_period>30</active_period>
		<idle_period>30</idle_period>
		<data_upload>512</data_upload>
		<data_download>128</data_download>
		<task_length>12000</task_length>
		<required_core>2</required_core>
		<vm_utilization_on_edge>30</vm_utilization_on_edge>
		<vm_utilization_on_cloud>5</vm_utilization_on_cloud>
		<vm_utilization_on_mobile>0</vm_utilization_on_mobile>
	</application>
</applications>
